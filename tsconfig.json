{
	"compilerOptions": {
		"module": "nodenext",
		"target": "es2020",
		"lib": ["es2021"],
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext",
		"sourceMap": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"strict": true
	},
	"include": ["src/**/*"]
}
