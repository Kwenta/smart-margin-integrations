{
	"extends": "@antfu",
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": "error",
		"no-mixed-spaces-and-tabs": ["warn", "smart-tabs"],
		"comma-dangle": [
			"error",
			{
				"arrays": "always-multiline",
				"objects": "always-multiline",
				"imports": "always-multiline",
				"exports": "always-multiline",
				"functions": "never"
			}
		],
		"no-tabs": "off",
		"jsonc/indent": "off",
		"@typescript-eslint/semi": "off",
		"@typescript-eslint/indent": "off",
		"curly": "off",
		"arrow-parens": "off",
		"import/no-anonymous-default-export": "off",
		"@typescript-eslint/no-unused-vars": [
			"warn",
			{
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_",
				"caughtErrorsIgnorePattern": "^_"
			}
		],
		"@typescript-eslint/brace-style": "off",
		"import/order": [
			"warn",
			{
				"alphabetize": {
					"order": "asc",
					"caseInsensitive": true
				},
				"groups": ["builtin", "external", "internal", "parent", "sibling"],
				"newlines-between": "always",
				"pathGroups": [
					{
						"pattern": "assets/**",
						"group": "internal"
					},
					{
						"pattern": "components/**",
						"group": "internal"
					},
					{
						"pattern": "constants/**",
						"group": "internal"
					},
					{
						"pattern": "containers/**",
						"group": "internal"
					},
					{
						"pattern": "contexts/**",
						"group": "internal"
					},
					{
						"pattern": "hooks/**",
						"group": "internal"
					},
					{
						"pattern": "pages/**",
						"group": "internal"
					},
					{
						"pattern": "queries/**",
						"group": "internal"
					},
					{
						"pattern": "sdk/**",
						"group": "internal"
					},
					{
						"pattern": "sections/**",
						"group": "internal"
					},
					{
						"pattern": "store/**",
						"group": "internal"
					},
					{
						"pattern": "state/**",
						"group": "internal"
					},
					{
						"pattern": "styles/**",
						"group": "internal"
					},
					{
						"pattern": "translations/**",
						"group": "internal"
					},
					{
						"pattern": "utils/**",
						"group": "internal"
					},
					{
						"pattern": "lib/**",
						"group": "internal"
					},
					{
						"pattern": "testing/**",
						"group": "internal"
					}
				],
				"pathGroupsExcludedImportTypes": []
			}
		]
	}
}
